                </div>
              </div>
              <div class="swiper-slide">
                <div class="recommend-list-item">
                  <%- include('partials/product.ejs') %>
                </div>
              </div>
              <div class="swiper-slide">
                <div class="recommend-list-item">
                  <%- include('partials/product.ejs') %>
                </div>
              </div>
              <div class="swiper-slide">
                <div class="recommend-list-item">
                  <%- include('partials/product.ejs') %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="/javascripts/product-detail.js"></script>
</body>